function [px, py] = hessian_points2(I, sigma, t)
    
    Ig = I;

    
    I_hess = hessian_points(I, sigma);
    Ihess = imhmax(I_hess,t);
    Ihess = uint8(Ihess);
    Ihess = Ihess > t;
    
    px = []; 
    py = [];
    
    [m, n] = size(Ihess);
    
    for i=1:m
        for j=1:n
            if(Ihess(i, j) == 1)
                px = [px, i];
                py = [py, j];
            end
        end
    end
    
    
    
    
    
    
    